<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_user_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_submit_user_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/background_rounded_filled_pink_white_border"
            android:text="@string/user_quiz_form_submit_btn_title"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@id/rv_user_quiz"
            app:layout_constraintStart_toStartOf="@id/rv_user_quiz"
            app:layout_constraintTop_toBottomOf="@id/rv_user_quiz" />

    </android.support.constraint.ConstraintLayout>










</ScrollView>