<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_pink_dark"
        android:paddingBottom="80dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_user_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_pink_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_submit_user_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:background="@color/white"
            android:text="SUBMIT"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="@id/rv_user_quiz"
            app:layout_constraintStart_toStartOf="@id/rv_user_quiz"
            app:layout_constraintTop_toBottomOf="@id/rv_user_quiz"
            tools:text="@string/user_quiz_submt_btn_title" />

    </android.support.constraint.ConstraintLayout>










</ScrollView>