<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="projetannuel.bigteam.com.feat.register.RegisterFragment"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/user_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/single_status_title"
            app:layout_constraintEnd_toStartOf="@+id/user_status_radio_group"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/SansSerif.Normal.14.OuterSpace"
            />

        <RadioGroup
            android:id="@+id/user_status_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@id/user_status_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/user_status_title"
            app:layout_constraintTop_toTopOf="@id/user_status_title"
            android:padding="12dp">

            <RadioButton
                android:id="@+id/user_status_single_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_yes"
                />

            <RadioButton
                android:id="@+id/user_status_single_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_no"
                />

        </RadioGroup>

        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_status_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/name"
            android:textAppearance="@style/SansSerif.Normal.14.OuterSpace"
            android:lines="1"
            />

        <EditText
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/email"
            android:textAppearance="@style/SansSerif.Normal.14.OuterSpace"
            android:lines="1"
            />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/mot_de_passe"
            android:textAppearance="@style/SansSerif.Normal.14.OuterSpace"
            android:lines="1"
            />

        <EditText
            android:id="@+id/user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/date_de_naissance"
            android:textAppearance="@style/SansSerif.Normal.14.OuterSpace"
            android:lines="1"
            />

        <EditText
            android:id="@+id/user_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/user_age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="@string/description"
            android:textAppearance="@style/SansSerif.Normal.14.OuterSpace"
            android:ems="5"
            android:gravity="start|top"
            android:background="@drawable/background_description_background"
            android:minLines="5"
            android:padding="5dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="@string/description"
            app:layout_constraintEnd_toEndOf="@string/description"
            app:layout_constraintTop_toBottomOf="@id/user_description"
            android:text="@string/submit_registration_btn_title"
            android:id="@+id/submit_btn_title"
            android:background="@color/outer_space"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/or_textview"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/register_or_other_providers_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/submit_btn_title"
            android:gravity="center_horizontal"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/common_google_signin_btn_icon_light"
            android:text="@string/sign_up_with_google_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/or_textview"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/google_sign"
            android:background="@color/google_sign_in_background"
            android:paddingStart="11dp"
            android:paddingEnd="0dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/fui_ic_facebook_white_22dp"
            android:paddingStart="15dp"
            android:text="@string/connect_with_facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/google_sign"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/facebook_sign"
            android:background="@drawable/com_facebook_button_background"
            android:paddingEnd="0dp"
            android:layout_marginBottom="15dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/fui_ic_twitter_bird_white_24dp"
            android:paddingStart="15dp"
            android:text="@string/sign_up_with_twitter_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/facebook_sign"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/twitter_sign_in"
            android:background="@color/fui_bgTwitter"
            android:paddingEnd="0dp"
            android:layout_marginBottom="15dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_instagram_login"
            android:paddingStart="15dp"
            android:text="@string/sign_up_with_instagram_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/twitter_sign_in"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/instagram_sign_in"
            android:background="@color/instagram_orange"
            android:paddingEnd="0dp"
            android:layout_marginBottom="15dp"
            />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
