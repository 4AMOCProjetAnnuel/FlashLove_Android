<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_pink_light</item>
        <item name="colorPrimaryDark">@color/primary_pink_dark</item>
        <item name="colorAccent">@color/primary_pink_normal</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/outer_space</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="AppTheme.EditText.SansSerif" parent="AppTheme">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SansSerif.Normal.14.OuterSpace" parent="AppTheme.EditText.SansSerif">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/outer_space</item>
    </style>



    <style name="SansSerif.Normal.14.OuterSpace.withBackground" parent="AppTheme.EditText.SansSerif">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/outer_space</item>
        <item name="android:ems">3</item>
        <item name="android:gravity">start|top</item>
        <item name="android:background">@drawable/background_description_background</item>
    </style>




</resources>
